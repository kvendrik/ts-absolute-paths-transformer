{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es5",
    "lib": ["es7", "dom"],
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": ".",
    "declaration": true
  },
  "exclude": ["node_modules", "example", "src/tests/**/*.ts"]
}
